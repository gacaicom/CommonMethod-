@{
    ViewBag.Title = "ASP.NET MVC 生成静态页面的技巧";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div> 
                <button class="btn btn-primary btn-sm" onclick="htmltemp()">使用HTML模板生成静态页面</button>
            </div>
            <hr />
            <div>
                <a href="~/StaticTemplate/ArticleTemplate.html" target="_blank">点击浏览HTML模板页面</a> 
            </div>
        </div>
        <div class="col-md-6">

            <div>
           
                <button class="btn btn-primary btn-sm" onclick="viewtemp()">使用视图引擎实现页面静态化</button>
            </div>
            <hr />
            <div>
                <a href="@Url.Action("Article","StaticHtml")" target="_blank">点击浏览视图模板页面</a>
            </div>
        </div>
    </div>
    <div id="divMessage">
    </div>
</div>
 
    <script type="text/javascript">
        function htmltemp() {
            $.post('@Url.Action("UseHtmlTemplateStatic")', {}, function (message) {
                var msg = "<div class=\"alert alert-info\" role=\"alert\">" + message + "</div>";
                $("#divMessage").prepend(msg);
            });
        }
        function viewtemp() {
            $.post('@Url.Action("UseViewEngineStatic")', {}, function (message) {
                var msg = "<div class=\"alert alert-info\" role=\"alert\">" + message + "</div>";
                $("#divMessage").prepend(msg);
            });
        }
    </script> 