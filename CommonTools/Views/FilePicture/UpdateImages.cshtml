
@{
    ViewBag.Title = "多个图片上传";
} 
<link href="~/Content/webuploader.css" rel="stylesheet" />
<link href="~/Content/webuploaderstyle.css" rel="stylesheet" />
<script src="~/Scripts/webuploader.js"></script>
<div class="container">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            文件图片上传 
        </h1>
    </section> 
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3"> 
                @Html.Partial("_FilePicMenus")
            </div><!-- /.col -->
            <div class="col-md-9">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">多个图片上传</h3> 
                    </div><!-- /.box-header -->
                    <div class="box-body no-padding">
                        <div id="uploader">
                            <div class="queueList">
                                <div id="dndArea" class="placeholder">
                                    <div id="filePicker"></div>
                                    <p>或将照片拖到这里，单次最多可选300张</p>
                                </div>
                            </div>
                            <div class="statusBar" style="display:none;">
                                <div class="progress">
                                    <span class="text">0%</span>
                                    <span class="percentage"></span>
                                </div><div class="info"></div>
                                <div class="btns">
                                    <div id="filePicker2"></div><div class="uploadBtn">开始上传</div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer no-padding">
                        <small>图片返回路径</small>
                        <input id="imgurls" type="text"/>
                    </div>
                </div><!-- /. box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>
<input type="hidden" id="keyid" value="@ViewBag.KeyId" />
<input type="hidden" id="imageTypes" value="@ViewBag.ImageTypes" /> 
<input type="hidden" id="imageTypesReg" value="@ViewBag.ImageTypesReg " />
<input type="hidden" id="imagemaxSize" value="@ViewBag.ImagemaxSize " />
<input type="hidden" id="posturl" value="@Url.Action("PhotoUpdate","FilePicture")" />
<script src="~/Scripts/UploadImage/upload.js"></script>